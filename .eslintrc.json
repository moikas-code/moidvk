{
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unreachable": "error",
    "no-dupe-keys": "error",
    "no-duplicate-case": "error",
    "no-func-assign": "error",
    "no-invalid-regexp": "error",
    "no-obj-calls": "error",
    "use-isnan": "error",
    "valid-typeof": "error"
  },
  "ignorePatterns": ["node_modules/", "*.test.js", "lib/rust-core/", "target/"]
}
